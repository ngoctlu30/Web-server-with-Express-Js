extends ../layouts/layout

block head

	h1 Users1
	.d-flex.align-items.center.w-50

	form(action="/users/search", method="GET" class="d-flex")
		input(type="text", name='q',class="form-control")
		button(class="btn btn-primary ml-2") Search

	table.table
		tr
			th Avatar
			th Name
			th Phone
			th Action
		each user in users
			tr
				td
					img(src=user.avatar, width="64", height="64", style="border-radius:32px")
				td= user.name
				td= user.phone
				td= user.action
					a.btn.btn-light(href='/users/' + user.id) View

		
				