extends ../layouts/layout

block head
	h1.ml-5 Creat user

	if errors
		each error in errors
			.alert.alert-danger= error

	form(action="/users/create",method="POST",enctype="multipart/form-data")
		.form-group
			label.ml-5(for="email") Email
			input#name.form-control.ml-5.w-50(name="email", type="text")
		.form-group
			label.ml-5(for="name") Name
			input#name.form-control.ml-5.w-50(name="name", type="text")
		.form-group
			label.ml-5(for="phone") Phone
			input#name.form-control.ml-5.w-50(name="phone", type="text")
		.form-group
			label.ml-5(for="password") Password
			input#name.form-control.ml-5.w-50(name="password", type="text")
		.form-group
			label.ml-5(for="avatar") Avatar
			input#avatar.form-control-file.ml-5.w-50(name="avatar", type="file")

		button.btn.btn-primary.ml-5 Creat