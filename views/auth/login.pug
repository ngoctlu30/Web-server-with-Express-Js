extends ../layouts/layout

block head
	h1.ml-5 Login

	if errors
		each error in errors
			.alert.alert-danger= error

	form( class=" " action="/auth/login",method="POST")
		.form-group
			label.ml-5(for="email") email
			input#email.form-control.ml-5.w-50(name="email", type="text", )
		.form-group
			label.ml-5(for="password") Phone
			input#name.form-control.ml-5.w-50(name="password", type="password",)

		button.btn.btn-primary.ml-5 Login